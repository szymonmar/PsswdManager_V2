      <HBox>
         <VBox layoutY="3.0" prefWidth="400.0" style="-fx-spacing: 15; -fx-padding: 25;">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Create account">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Text>
            <VBox style="-fx-spacing: 5;">
               <children>
                  <Label text="Username" />
                  <TextField fx:id="dbNameField"/>
               </children>
            </VBox>
            <VBox style="-fx-spacing: 5;">
               <children>
                  <Label text="Password" />
                  <PasswordField fx:id="passwordField" />
               </children>
            </VBox>
            <VBox style="-fx-spacing: 5;">
               <children>
                  <Label text="Repeat Password" />
                  <PasswordField fx:id="passwordRepeatField" />
               </children>
            </VBox>
            <VBox style="-fx-spacing: 5;">
               <children>
                  <Label text="Password strength" />
                  <ProgressBar fx:id="progressBar" prefWidth="380.0" prefHeight="10.0" progress="0.0" style="-fx-accent: #FF0000;" />
               </children>
            </VBox>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="24.0" prefWidth="407.0" style="-fx-spacing: 20;">
               <Button cancelButton="true" contentDisplay="CENTER" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#onCancelClick" text="Cancel" textAlignment="CENTER" />
               <Button contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#onCreateClick" text="Create" textAlignment="CENTER" />
            </HBox>
         </VBox>
         <Separator prefHeight="400.0" orientation="VERTICAL" />
         <VBox layoutY="3.0" prefHeight="170.0" prefWidth="400.0" style="-fx-spacing: 35; -fx-padding: 25;">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Generate password" style="-fx-padding: 20;">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Text>
            <VBox style="-fx-spacing: 15;">
               <CheckBox fx:id="capitals" text="Capital letters" />
               <CheckBox fx:id="numbers" text="Numbers" />
               <CheckBox fx:id="symbols" text="Symbols" />
               <VBox prefWidth="380.0" style="-fx-spacing: 5">
                  <Label text="Number of characters" />
                  <HBox alignment="CENTER" prefWidth="400.0" style="-fx-spacing: 15;">
                     <Label fx:id="numOfCharacters" prefWidth="50.0" alignment="CENTER"  text="8" style="-fx-font-size: 14"/>
                     <Slider fx:id="slider" prefWidth="360.0" min="8" max="30" snapToTicks="true" blockIncrement="1" majorTickUnit="1"
                             minorTickCount="0" />
                  </HBox>
               </VBox>
               <HBox alignment="CENTER_LEFT" style="-fx-spacing: 10;">
                  <children>
                     <Label text="Generated password:" />
                     <TextField fx:id="generatedPassword" prefWidth="225.0" editable="false"/>
                  </children>
               </HBox>
            </VBox>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="24.0" prefWidth="400.0" style="-fx-spacing: 20;">
               <Button contentDisplay="CENTER" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#onUseClick" prefHeight="25.0" prefWidth="140.0" text="Use this password" textAlignment="CENTER" />
               <Button contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#onGenerateClick" prefHeight="25.0" prefWidth="140.0" text="Generate password" textAlignment="CENTER" />
            </HBox>
         </VBox>
      </HBox>
