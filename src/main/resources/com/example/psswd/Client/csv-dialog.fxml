<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Separator?>

<?import javafx.scene.control.TextField?>
<Pane VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.psswd.Client.views.CSVController">
    <children>
        <VBox  layoutY="3.0" prefHeight="210.0" prefWidth="380.0" style="-fx-spacing: 35; -fx-padding: 25;">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="CSV Import / Export">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Text>
            <VBox alignment="CENTER" style="-fx-spacing: 15;">
                <Button contentDisplay="CENTER" prefWidth="150.0" defaultButton="true" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#onImportClick" text="Import from CSV" textAlignment="CENTER" />
                <Button contentDisplay="CENTER" prefWidth="150.0" defaultButton="true" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#onExportClick" text="Export to CSV" textAlignment="CENTER" />
            </VBox>
            <HBox alignment="BOTTOM_RIGHT">
                <Button cancelButton="true" contentDisplay="CENTER" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#onCancelClick" text="Cancel" textAlignment="CENTER" />
            </HBox>
        </VBox>
    </children>
</Pane>